<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/editPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Enter pet name"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/editPetColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter pet color"
        android:layout_below="@+id/editPetName"
        android:layout_alignStart="@+id/editPetName" />

    <EditText
        android:id="@+id/editPetSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Enter pet size"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editPetColor"
        android:layout_alignStart="@+id/editPetColor" />

    <Button
        android:id="@+id/action_add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPetSize"
        android:layout_below="@+id/editPetSize"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="56dp"
        android:text="Button" />
</RelativeLayout>