<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pet_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/blank_pet" />

    <TextView
        android:id="@+id/pet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pet_item_image"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/pet_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pet_item_name"
        android:layout_below="@+id/pet_item_name"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="" />

    <TextView
        android:id="@+id/pet_item_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/pet_item_size"
        android:layout_alignStart="@+id/pet_item_size"
        android:text="" />

</RelativeLayout>